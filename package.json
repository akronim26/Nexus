{
  "name": "blocsociitr-nexus",
  "version": "1.0.0",
  "description": "Nexus is a Model Context Protocol (MCP) server that makes a set of blockchain tools available for the Hyperliquid EVM chain through a standard tool interface",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "blocsociitr-nexus": "./build/main.js"
  },
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node build/main.js",
    "dev": "tsc && node build/main.js",
    "prepare": "npm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf build",
    "prebuild": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "hyperliquid",
    "claude",
    "ai",
    "model-context-protocol",
    "defi"
  ],
  "author": "BlocsocIITR",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlocSoc-iitr/Nexus"
  },
  "homepage": "https://github.com/BlocSoc-iitr/Nexus/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/BlocSoc-iitr/Nexus/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@nktkas/hyperliquid": "^0.22.1",
    "abitype": "^1.0.9",
    "dotenv": "^17.2.1",
    "ether": "^0.0.9",
    "ethers": "^6.15.0",
    "hyperliquid": "^1.7.6",
    "viem": "^2.33.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
